<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/answerText"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="@color/colorBackground"
        android:text="Username"
        />
    <TextView
        android:id="@+id/answerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/username"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="15dp"
        android:text="Look at me providing useful criticism to a well thought-out question, friends"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/upvoteButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/answerText"
            android:background="@null"
            android:contentDescription="upvote arrow"
            android:src="@drawable/ic_up_arrow_unselected" />

        <TextView
            android:id="@+id/pointValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/upvoteButton"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center_horizontal"
            android:text="/value/" />

        <ImageButton
            android:id="@+id/downvoteButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/pointValueTextView"
            android:background="@null"
            android:contentDescription="downvote arrow"
            android:padding="0dp"
            android:src="@drawable/ic_down_arrow_unselected" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/imageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="15dp"
        android:layout_alignLeft="@id/answerText"
        android:layout_below="@id/answerText">
    </LinearLayout>
    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageContainer"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/acceptButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:text="@string/accept_text" />

        <RadioButton
            android:id="@+id/denyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_toRightOf="@id/acceptButton"
            android:text="@string/deny_string" />
    </RadioGroup>

</RelativeLayout>